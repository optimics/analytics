          "valueValidators": [
            {
              "type": "NON_EMPTY"
            }
          ]
        },
        "isUnique": false
      },
      {
        "param": {
          "type": "SELECT",
          "name": "contentArchetype",
          "displayName": "Content Archetype",
          "simpleValueType": true,
          "valueHint": "",
          "help": "This event will fire only for selected content archetype.",
          "alwaysInSummary": false,
          "selectItems": [
            {
              "value": "",
              "displayValue": "Any"
            },
            {
              "value": "audio",
              "displayValue": "Audio"
            },
            {
              "value": "image",
              "displayValue": "Image"
            },
            {
              "value": "text",
              "displayValue": "Text"
            },
            {
              "value": "video",
              "displayValue": "Video"
            }
          ],
          "enablingConditions": [
            {
              "paramName": "event",
              "paramValue": "typeConsumptionAchievement",
              "type": "EQUALS"
            }
          ]
        }
      },
      {
        "param": {
          "type": "TEXT",
          "name": "contentType",
